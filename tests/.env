# Deployment information
# The deployment namespace is retrieved from the `serviceaccount` volume
export ZENKO_K8S_NAMESPACE=default
# The Zenko Helm release name
export ZENKO_HELM_RELEASE=zenko-test

# Zenko S3 access credentials
#export AWS_ACCESS_KEY_ID=
#export AWS_SECRET_ACCESS_KEY=

# Service URLs
# These are derived from `ZENKO_HELM_RELEASE` if set
#export CLOUDSERVER_FRONT_ENDPOINT=http://${ZENKO_HELM_RELEASE}-cloudserver-front:80
#export PROMETHEUS_ENDPOINT=http://${ZENKO_HELM_RELEASE}-prometheus-server:80

# backend bucket names
# These are the names for the backend buckets
export AWS_S3_BACKBEAT_BUCKET_NAME=zenko-aws-crr-target-bucket
export AWS_S3_BACKBEAT_SRC_BUCKET_NAME=zenko-aws-crr-src-bucket
export AWS_S3_BUCKET_NAME=zenko-aws-target-bucket
export AWS_S3_BUCKET_NAME_2=zenko-aws-target-bucket-2
export AZURE_BACKBEAT_CONTAINER_NAME=zenko-azure-crr-target-bucket
export AZURE_BACKBEAT_SRC_CONTAINER_NAME=zenko-azure-crr-src-bucket
export AZURE_BACKEND_CONTAINER_NAME=zenko-azure-target-bucket
export AZURE_BACKEND_CONTAINER_NAME_2=zenko-azure-target-bucket-2
export GCP_BUCKET_NAME=zenko-gcp-target-bucket
export GCP_BUCKET_NAME_2=zenko-gcp-target-bucket-2
export GCP_CRR_BUCKET_NAME=zenko-gcp-crr-target-bucket
export GCP_CRR_MPU_BUCKET_NAME=zenko-gcp-crr-mpu-bucket
export GCP_CRR_SRC_BUCKET_NAME=zenko-gcp-crr-src-bucket
export GCP_MPU_BUCKET_NAME=zenko-gcp-mpu-bucket
export GCP_MPU_BUCKET_NAME_2=zenko-gcp-mpu-bucket-2
export MULTI_CRR_SRC_BUCKET=zenko-multi-crr-src-bucket

if [ -f ".secrets.env" ]; then
    source ./.secrets.env
else
    echo "No secrets file found! This is probably bad!"
fi

if [ -f ".local.env" ]; then
	source ./.local.env
fi
